<?xml version="1.0" encoding="utf-8" ?>

<options>
	<option path="/Externals/Wechat">
		<applet>
			<apps default="AppId">
				<app app.name="AppId" secret="AppSecret" />
			</apps>
		</applet>

		<channel>
			<apps>
				<app app.name="AppId" secret="AppSecret" />
			</apps>
		</channel>
	</option>

	<option path="/Externals/Wechat">
		<fallback url="http://api.automao.cn/externals/wechat/fallback/payment/{0}" />

		<authorities default="automao.saas">
			<authority authority.name="automao.saas" code="12345678" directory="./certificates/" secret="xxxxxx">
				<apps default="AppId">
					<app app.name="AppId" secret="AppSecret" />
				</apps>
			</authority>
		</authorities>
	</option>
</options>
